<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.example.equipo.termitransr.Reserva">

        <Button
            style="@style/Widget.AppCompat.Button.Borderless"
            android:id="@+id/Generar_codigo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Generar Codigo"
            android:textSize="@dimen/size_ButtonReser"
            android:layout_marginTop="@dimen/margin_reserv"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/generatenumber"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Generar_codigo"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="@dimen/margin_resert" />

        <TextView
            android:id="@+id/codigo"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_codigo"
            android:textSize="@dimen/size_codigo"
            android:gravity="center"
            android:padding="@dimen/padd_codigo"
            android:textColor="@color/colorcodigo"
            android:layout_marginTop="@dimen/marginc_codigo"
            android:layout_below="@+id/Generar_codigo"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/size_codigoReserva"
            android:text="@string/codigo_reserve"
            android:textColor="@color/colorPrimaryText"
            android:layout_centerInParent="true" />

    </RelativeLayout>
</layout>